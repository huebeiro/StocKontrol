<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <gradient
                android:startColor="#4ed44e"
                android:endColor="#3caf3c"
                android:angle="270" />
            <stroke
                android:width="3dp"
                android:color="#266e26" />
            <corners
                android:radius="3dp" />
            <padding
